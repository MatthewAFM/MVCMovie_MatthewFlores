@model MVCMovie.Models.Book

<h2>Agregar Libro</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Autor</label>
        <input asp-for="Autor" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lanzamiento</label>
        <input asp-for="Lanzamiento" type="date" class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Portada (URL opcional)</label>
        <input asp-for="Portada" class="form-control" placeholder="https://..." />
    </div>

    <div class="form-group">
        <label>Subir imagen</label>
        <input type="file" name="ImagenUpload" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
</form>
